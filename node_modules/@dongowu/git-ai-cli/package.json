{
  "name": "@dongowu/git-ai-cli",
  "version": "1.0.21",
  "description": "Fast, privacy-first, bring-your-own-model Git commit message generator",
  "type": "module",
  "main": "dist/cli.js",
  "bin": {
    "git-ai": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "NODE_NO_WARNINGS=1 node dist/cli.js",
    "prepublishOnly": "npm run build",
    "release": "npm version patch && git push --follow-tags",
    "release:minor": "npm version minor && git push --follow-tags",
    "release:major": "npm version major && git push --follow-tags",
    "tag": "npm version patch && git push && git push --tags",
    "tag:minor": "npm version minor && git push && git push --tags",
    "tag:major": "npm version major && git push && git push --tags"
  },
  "keywords": [
    "git",
    "ai",
    "commit",
    "cli",
    "openai",
    "deepseek",
    "ollama",
    "style-learning",
    "git-hook",
    "productivity"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "cac": "^6.7.14",
    "chalk": "^5.3.0",
    "conf": "^12.0.0",
    "execa": "^8.0.1",
    "inquirer": "^9.2.12",
    "openai": "^4.28.0",
    "ora": "^8.0.1"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.7",
    "@types/node": "^20.11.0",
    "typescript": "^5.3.3"
  }
}
